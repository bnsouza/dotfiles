    {
      "description": "Command + Page Up / Page Down = Mudar de aba (anterior/pr√≥ximo)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "page_down",
            "modifiers": {
              "mandatory": [
                "right_alt"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": [
                "right_command",
                "right_shift"
              ]
            }
          ],
          "to_after_key_up": [
